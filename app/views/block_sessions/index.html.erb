<h2>Sessions</h2>
<% if @sessions.present? %>
  <div>
    <ul>
      <% @sessions.each do |session| %>
        <li>
          <%= link_to session.name, session %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  Create your first session!
<% end %>
<%= form_for BlockSession.new do |f| %>
  <div>
    <%= f.label :name, 'Session Name' %><br />
    <%= f.text_field :name %><br />
    <%= f.label :start_date, 'Start Date' %>
    <%= f.date_field :start_date, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %><br />
    <%= f.label :end_date, 'End Date' %>
    <%= f.date_field :end_date, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %><br />
    <%= f.submit %>
  </div>
<% end %>